<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.anastr.speedviewlib.ImageSpeedometer
        android:id="@+id/speedometer"
        android:layout_width="478dp"
        android:layout_height="529dp"
        android:layout_x="101dp"
        android:layout_y="77dp"
        app:sv_image="@drawable/examplespeedometer"
        app:sv_indicator="NormalSmallIndicator"
        app:sv_speedTextColor="@android:color/transparent"
        app:sv_unitTextColor="@android:color/transparent"
        app:sv_speedometerWidth="35dp" />

    <com.github.anastr.speedviewlib.ImageSpeedometer
        android:id="@+id/tachometer"
        android:layout_width="489dp"
        android:layout_height="483dp"
        android:layout_x="706dp"
        android:layout_y="73dp"
        app:sv_image="@drawable/exampletachometer"
        app:sv_indicator="NormalSmallIndicator"
        app:sv_centerCircleColor="#b2f941ff"
        app:sv_highSpeedColor="#ec2f33"
        app:sv_indicatorColor="#2b38e6"
        app:sv_lowSpeedColor="#58ed21"
        app:sv_markColor="#99000000"
        app:sv_speedTextColor="@android:color/transparent"
        app:sv_unitTextColor="@android:color/transparent"
        app:sv_mediumSpeedColor="#edd029"
        app:sv_speedometerWidth="35dp" />

    <com.github.anastr.speedviewlib.ImageSpeedometer
        android:id="@+id/oilpressuregauge"
        android:layout_width="218dp"
        android:layout_height="218dp"
        android:layout_x="178dp"
        android:layout_y="570dp"
        app:sv_image="@drawable/exampleoiltemp"
        app:sv_speedTextColor="@android:color/transparent"
        app:sv_unitTextColor="@android:color/transparent" />

    <com.github.anastr.speedviewlib.ImageSpeedometer
        android:id="@+id/temperaturegauge"
        android:layout_width="132dp"
        android:layout_height="142dp"
        android:layout_x="888dp"
        android:layout_y="622dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="759dp"
        android:layout_y="671dp"
        android:text="OBD"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/obd_status"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_x="759dp"
        android:layout_y="701dp"
        android:text=""
        android:textSize="18sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="799dp"
        android:layout_y="671dp"
        android:text="BT"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bt_status"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_x="799dp"
        android:layout_y="701dp"
        android:text=""
        android:textSize="18sp" />

</AbsoluteLayout>

